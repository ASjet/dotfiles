# Alias for docker

alias dk="docker"
alias dkc="docker-compose"
alias dki="docker image"

dke() { docker exec -it "$2" bash; }
dkrd() { docker run -d "$1"; }
dkrt() { docker run -it "$1" /bin/bash; }
mkdki() {
    docker build . -t $1:$2 -f ${3:-Dockerfile}
    docker save $1:$2 -o $1.$2.tar
    docker image rm -f $1:$2
}
